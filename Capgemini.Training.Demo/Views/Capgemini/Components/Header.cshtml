@using Capgemini.Training.Demo.Models;
@using Sitecore.Mvc.Presentation;
@using Sitecore.Mvc;
@using Sitecore.Links;
@using Sitecore.Links.UrlBuilders;
@model HeaderModel
@{
//ItemUrlBuilderOptions options = new ItemUrlBuilderOptions();
//options.LanguageEmbedding = LanguageEmbedding.Always;
//options.LowercaseUrls = true;
}
@if (Model != null && Model.HeaderDatasource != null)
{
    <!-- Navbar Start -->
    <div class="container-fluid sticky-top bg-dark bg-light-radial shadow-sm px-5 pe-lg-0">
        <nav class="navbar navbar-expand-lg bg-dark bg-light-radial navbar-dark py-3 py-lg-0">
            <a href="/" class="navbar-brand">
                <h1 class="m-0 display-4 text-uppercase text-white">
                    <i class="bi bi-building text-primary me-2"></i>
                    @Html.Sitecore().Field("Logo Text", Model.HeaderDatasource)
                </h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    @if (Model.NavigationItems != null && Model.NavigationItems.Count > 0)
                    {
                        foreach (var navigationItem in Model.NavigationItems)
                        {
                            <a href="@LinkManager.GetItemUrl(navigationItem)" class="nav-item nav-link">
                                @*<a href="@navigationItem.Url" class="nav-item nav-link">*@
                                    @*@Html.Sitecore().Field("Navigation Title", navigationItem)*@
                                    @navigationItem.Name
                                </a>
                                }
                                }
                                @Html.Sitecore().Field("Contact us", Model.HeaderDatasource, new { @class = "nav-item nav-link bg-primary text-white px-5 ms-3 d-none d-lg-block" })
</div>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
}