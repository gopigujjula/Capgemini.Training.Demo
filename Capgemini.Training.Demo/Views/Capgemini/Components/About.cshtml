@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@if (Model != null && Model.Item != null)
{
    <!-- About Start -->
    <div class="container-fluid py-6 px-5">
        <div class="row g-5">
            <div class="col-lg-7">
                <h1 class="display-5 text-uppercase mb-4">@Html.Sitecore().Field("About text", Model.Item)</h1>
                <h4 class="text-uppercase mb-3 text-body">@Html.Sitecore().Field("About Summary", Model.Item)</h4>
                @Html.Sitecore().Field("About Description", Model.Item)                
                @Html.Sitecore().Field("Signature", Model.Item)
            </div>
            <div class="col-lg-5 pb-5" style="min-height: 400px;">
                <div class="position-relative bg-dark-radial h-100 ms-5">
                    @*<img class="position-absolute w-100 h-100 mt-5 ms-n5" src="img/about.jpg" style="object-fit: cover;">*@
                    @Html.Sitecore().Field("About Image", Model.Item, new {@class= "position-absolute w-100 h-100 mt-5 ms-n5" })
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
}